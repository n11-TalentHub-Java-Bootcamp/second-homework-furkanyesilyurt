<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="productDao" class="com.furkanyesilyurt.dao.ProductDao"
          scope="singleton"></bean>

    <bean id="ProductEntityService"
          class="com.furkanyesilyurt.services.entityservices.ProductEntityService" scope="singleton">
        <constructor-arg name="productDao" ref="productDao"></constructor-arg>
    </bean>

</beans>