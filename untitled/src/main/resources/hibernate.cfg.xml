<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!--Bu xml dosyası bizim com.furkanyesilyurt.hibernate ayarlarımızı, veritabanı ayarlarımızı oluşturmamızı sağlar.-->
        <!--Hibernate kullanılan projelerde olmak zorundadır.-->

        <!-- Connection settings -->
        <property name="com.furkanyesilyurt.hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="com.furkanyesilyurt.hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="com.furkanyesilyurt.hibernate.connection.username">postgres</property>
        <property name="com.furkanyesilyurt.hibernate.connection.password">12345</property>

        <!-- SQL dialect -->
        <property name="com.furkanyesilyurt.hibernate.dialect">org.com.furkanyesilyurt.hibernate.dialect.PostgreSQL10Dialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Update database on startup -->
        <property name="com.furkanyesilyurt.hibernate.hbm2ddl.auto">update</property>

        <!-- Annotated com.furkanyesilyurt.entity classes -->
        <mapping class="com.furkanyesilyurt.entity.Category"/>
        <mapping class="com.furkanyesilyurt.entity.Product"/>
        <mapping class="com.furkanyesilyurt.entity.ProductReview"/>
        <mapping class="com.furkanyesilyurt.entity.User"/>

    </session-factory>
</hibernate-configuration>